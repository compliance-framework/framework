    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "env": {
                "MONGO_URI": "mongodb://localhost:27017",
                "NATS_URI": "nats://localhost:4222",
            }
        },
        {
            "name": "Docker Delve",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "host": "127.0.0.1",
            "remotePath": "/app",
            "port": 2345,
            "showLog": true,
            "trace": "verbose"
                },
    ]
}